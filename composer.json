{
  "name": "mitydigital/statamic-logger",
  "description": "Advanced logging for Statamic.",
  "type": "statamic-addon",
  "keywords": [
    "statamic",
    "logging",
    "log"
  ],
  "autoload": {
    "psr-4": {
      "MityDigital\\StatamicLogger\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MityDigital\\StatamicLogger\\Tests\\": "tests"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Marty Friedel"
    }
  ],
  "require": {
    "php": "^8.2",
    "statamic/cms": "^4.0"
  },
  "extra": {
    "statamic": {
      "name": "Logger for Statamic",
      "description": "Advanced logging for Statamic."
    },
    "laravel": {
      "providers": [
        "MityDigital\\StatamicLogger\\ServiceProvider"
      ]
    }
  },
  "require-dev": {
    "pestphp/pest": "^2.9",
    "orchestra/testbench": "^8.5",
    "laravel/pint": "^1.10",
    "spatie/pest-plugin-test-time": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.1",
    "spatie/x-ray": "^1.1"
  },
  "scripts": {
    "pint": [
      "./vendor/bin/pint"
    ],
    "test": [
      "php -d memory_limit=-1 -d max_execution_time=0 ./vendor/bin/pest"
    ]
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "pixelfear/composer-dist-plugin": true
    }
  }
}
